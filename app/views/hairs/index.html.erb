
<div class="top-bar-profile">
  <img src="/assets/logo.jpg" class="logo-img"/> 
  <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => 'profile-logout') %>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @hairs.each do |hair| %>
      <tr>
        <td><%= link_to 'Show', hair %></td>
        <td><%= link_to 'Edit', edit_hair_path(hair) %></td>
        <td><%= link_to 'Destroy', hair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


