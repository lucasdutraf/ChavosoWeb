<p id="notice"><%= notice %></p>

<h1>Hairs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hairs.each do |hair| %>
      <tr>
        <td><%= link_to 'Show', hair %></td>
        <td><%= link_to 'Edit', edit_hair_path(hair) %></td>
        <td><%= link_to 'Destroy', hair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hair', new_hair_path %>
