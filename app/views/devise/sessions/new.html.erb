
<img src="/assets/index-logo.jpg" class="chavoso-logo"/>  
<section class="devise-bg">
  <div class="devise"> 

    <h2 class="devise-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => 'devise-form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'devise-form-input' %>
      </div>

      <div class="field">
        <%= f.label :password, :class => 'devise-form-label'%><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'devise-form-input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, :class => 'check-box'%>
          <%= f.label :remember_me, :class => 'check-box-lbl' %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :class => 'devise-form-btn'%>
      </div>
    <% end %>

    <div class="top-space"></div>
    <%= render "devise/shared/links" %>
    <div class="bottom-space"></div>
  </div>
</section>